$temp-title-fs = hexo-config('home_banner.text_style.title_size')
$title-font-size = $temp-title-fs ? convert($temp-title-fs) : 2.8rem
$temp-subtitle-fs = hexo-config('home_banner.text_style.subtitle_size')
$subtitle-font-size = $temp-subtitle-fs ? convert($temp-subtitle-fs) : 1.4rem
$temp-line-height = hexo-config('style.first_screen.line_height')
$line-height = $temp-line-height ? $temp-line-height : 1.2
$home-banner-icon-size = 1.6rem

@require '../../common/variables'

.home-banner-background
  //background var(--home-banner-img) center center / cover no-repeat
  transition filter 0.3s ease

.home-banner-container
  font-family 'Chillax-Variable', sans-serif
  position relative
  box-sizing border-box
  width 100%
  min-height 100vh
  overflow hidden
  will-change transform

  .content
    position relative
    box-sizing border-box
    min-height 90vh

    .description
      font-size $title-font-size
      line-height $line-height
      color var(--home-banner-text-color)

      p
        margin 0
        opacity 0.9
        font-family 'Geist Variable', sans-serif
        font-weight 350

        i
          font-size $subtitle-font-size
          font-style normal

        span
          font-size: $subtitle-font-size * 1.05

      +redefine-tablet()
        font-size: $title-font-size * 0.9

.bg-info-container
  cursor pointer
  position relative
  display inline-block

  .icon
    transform scale(1)
    transition transform 0.3s ease-in-out, color 0.2s ease-in-out
    
  &:hover
    .icon
      transform scale(1.1)
      color var(--primary-color)

    .bg-info-popup
      opacity 1
      transform translateY(0) scale(1)
      pointer-events auto

.bg-info-popup
  position absolute
  bottom 180%
  right 0
  margin-bottom 14px
  width 256px
  background-color var(--background-color-transparent-40)
  border 1px solid var(--border-color)
  border-radius $redefine-border-radius-large
  padding 16px
  backdrop-filter blur(10px)
  box-shadow var(--redefine-box-shadow)
  opacity 0
  transform translateY(16px) scale(0.95)
  pointer-events none
  transition opacity 0.4s ease-in-out, transform 0.4s ease-in-out
  z-index $z-index-5

  .title
    font-weight bold
    text-align center
    margin-bottom 8px
    color var(--first-text-color)

  .desc
    font-size 0.9rem
    text-align center
    color var(--second-text-color)
    line-height 1.4